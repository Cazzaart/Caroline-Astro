---
import Header from "../components/SiteHeader.astro";
import Footer from "../components/SiteFooter.astro";
import ScrollToTopButton from "../components/ScrollToTopButton.astro";

import { getImage } from "astro:assets";
import "../styles/global.css";

const { title, description, featuredImage } = Astro.props;

import openGraphImageSrc from "../assets/placeholder-square.webp";

// Generate the openGraphImage with a fixed width of 1200px
const openGraphImage = await getImage({
  src: openGraphImageSrc,
  width: 1200,
  format: "webp", // or 'png', 'webp', etc., depending on your preference
});
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>

    <meta charset="utf-8" />
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={openGraphImage.src} />
    <!-- <meta property="og:image" content={featuredImage.src} /> -->

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <!-- <meta property="twitter:image" content={openGraphImage.src} /> -->
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" href={"/rss.xml"} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <ScrollToTopButton />
  </body>
</html>
